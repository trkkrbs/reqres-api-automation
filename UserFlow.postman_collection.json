		{
			"name": "Create User (extract userId)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var responseJSON = pm.response.json();",
							"",
							"// Extract the 'id' and store it in an environment variable",
							"pm.environment.set(\"userId\", responseJSON.id);",
							"",
							"// Print the value of 'userId' to the console",
							"console.log(\"userId:\", pm.environment.get(\"userId\"));",
							"",
							"pm.test(\"Response status code is 201\", function () {",
							"    pm.expect(pm.response.code).to.eql(201);",
							"});",
							"",
							"pm.test(\"Response time is less than 500ms\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(500);",
							"});",
							"",
							"",
							"pm.test(\"Validate that the 'id' is a non-null value\", function () {",
							"    const responseData = pm.response.json();",
							"",
							"    pm.expect(responseData).to.be.an('object');",
							"    pm.expect(responseData.id).to.exist.and.not.to.be.null;",
							"});",
							"",
							"",
							"// Response contains required fields",
							"pm.test(\"Response contains required fields\", function () {",
							"    const responseData = pm.response.json();",
							"    ",
							"    pm.expect(responseData).to.be.an('object');",
							"    pm.expect(responseData).to.have.all.keys('name', 'job', 'id', 'createdAt', '_meta');",
							"});",
							"",
							"",
							"pm.test(\"Validate 'createdAt' field is in a valid date format\", function () {",
							"    const responseData = pm.response.json();",
							"    ",
							"    pm.expect(responseData).to.be.an('object');",
							"    pm.expect(responseData.createdAt).to.exist;",
							"    pm.expect(new Date(responseData.createdAt).getTime()).to.not.be.NaN; // Check if it's a valid date",
							"});",
							"",
							"",
							"",
							"",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
