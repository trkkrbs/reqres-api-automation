		{
			"name": "Login (extract token)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Response has 'token' property testi",
							"pm.test(\"Response has 'token' property\", function() {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('token');",
							"    pm.environment.set(\"token\", jsonData.token);",
							"    console.log('token value is from Response ; ', jsonData.token)",
							"    console.log('token value is from Environment ; ', pm.environment.get('token'))",
							"",
							"}) ",
							"",
							"",
							"// Test to verify response content type",
							"pm.test(\"Response content type is application/json\", function() {",
							"    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
							"});",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set(\"time now\", new Date().toLocaleString(\"en-US\", { timeZone: \"UTC\", hour12: false, year: \"numeric\", month: \"2-digit\", day: \"2-digit\", hour: \"2-digit\", minute: \"2-digit\", second: \"2-digit\" }).replace(\",\", \"\").replace(/\\//g, \"-\").replace(\" \", \" \"));"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
